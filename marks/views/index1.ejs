<% include partials/header %>
<div class="ui main text container">
  <div class="ui huge header">Marks Database!</div>
  <div class="ui top attached segment">
    <div class="ui divided items">
      <%diary.find(function(mydiary){ %>
      <div class="item">
        <div class="content">

          <% if(mydiary.name == output) { %>
            <a href="/diary/<%=mydiary._id%>" class="header"><%=mydiary.name%></a>

            <p><%=mydiary.subject.substring(0, 90) %></p>
            <p><%=mydiary.marks %></p>

            <div class="extra">
              <a
                href="/diary/<%=mydiary._id%>"
                class="ui animated green basic button"
                tabindex="0"
              >
                <div class="visible content">Read More</div>
                <div class="hidden content">
                  <i class="right arrow icon"></i>
                </div>
              </a>
            </div>

            <% } else {%> 
              
              <p></p>

              <%}%>


        </div>
      </div>
      <% }) %>
    </div>
  </div>
</div>
<% include partials/footer %>
